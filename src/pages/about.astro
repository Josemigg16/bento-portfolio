---
import WebDev from "@/components/Bento/WebDev.astro"
import Layout from "@/layouts/Layout.astro"
import NavLayout from "@/layouts/NavLayout.astro"
---

<Layout>
  <NavLayout>
    <div
      transition:name="webDev"
      class="webDev flex flex-col h-[800px] px-4 py-6 w-[700px] overflow-hidden bg-[#D9D9D9] dark:bg-[hsl(212,64%,14%)] rounded-[20px] border border-[#0b0e39] gap-6"
    >
      <h1 class="text-8xl font-black w-fit mx-auto mb-2">WebDev</h1>
      <section class="border-t border-[#0b0e39] pt-6 pb-2 px-4">
        <div class="flex">
          <img
            transition:name="photo"
            class="object-bottom rounded-[20px] h-[100px] mr-6 mb-3 border"
            src="./profile.jpg"
            alt="Profile photo"
          />
          <p>
            Lorem ipsum, dolor sit amet consectetur adipisicing elit. Aliquam
