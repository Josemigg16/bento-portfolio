---
import Item from "../Item.astro"
---

<Item>
  <button class="z-20" type="button" id="theme-selector">
    <span class="sr-only"
      >Enable <span class="dark:hidden">light</span><span
        class="hidden dark:inline">dark</span
      > mode</span
    >
    <div class="flex">
      <img
        class="absolute inset-0 -left-full dark:left-0 transition-all cursor-pointer"
        src="./sun.png"
        alt="sun"
      />
      <img class="absolute inset-0 dark:left-full transition-all cursor-pointer" src="./moon.png" alt="moon" />
    </div>
  </button>
  <script>
    document.getElementById("theme-selector")?.addEventListener("click", () => {
      if (localStorage.astroErrorOverlayTheme === "dark") {
        localStorage.astroErrorOverlayTheme = "light"
        document.documentElement.classList.remove("dark")
      } else {
        localStorage.astroErrorOverlayTheme = "dark"
        document.documentElement.classList.add("dark")
      }
    })
  </script>
</Item>
