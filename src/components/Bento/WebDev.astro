---
import Item from "../Item.astro"
---

<Item>
  <a
    transition:name="webDev"
    class="webDev flex flex-col justify-between h-full px-4 py-6"
    href="/about"
  >
    <h1 class="text-8xl font-black w-fit mx-auto">WebDev</h1>
    <div class="h-[100px]">
      <li>Frontend</li>
      <li>Backend</li>
      <li>Inteligencia Artificial</li>
    </div>
  </a>
</Item>
<style is:global>
  .webDev h1 {
    background-image: linear-gradient(to right, #6a11cb, #2575fc);
    background-clip: text; /* Recorta el fondo al texto */
    -webkit-background-clip: text;
    color: transparent;
    animation:
      typing 8s steps(6, end) infinite,
      blink-caret 0.75s step-end infinite;
    overflow: hidden;
    border-right: 1px solid;
    font-family: "Geist Mono";
  }

  @keyframes typing {
    0% {
      width: 0;
    }
    10% {
      width: 0;
    }
    30% {
      width: 6ch;
    }
    80% {
      width: 6ch;
    }
    90% {
      width: 0;
    }
    100% {
      width: 0;
    }
  }

  @keyframes blink-caret {
    from,
    to {
      border-color: transparent;
    }
    50% {
      border-color: #000;
    }
  }
  @keyframes dark-blink-caret {
    from,
    to {
      border-color: transparent;
    }
    50% {
      border-color: #fff4;
    }
  }
  html.dark {
    h1 {
      background-image: linear-gradient(
        to right,
        #ff7e5f,
        #feb47b
      ); /* Define el gradiente */
      animation:
        typing 8s steps(6, end) infinite,
        dark-blink-caret 0.75s step-end infinite;
    }
  }
</style>
