    );
  }
  .icon:nth-child(11) {
    animation-delay: calc(
      var(--duration) / var(--icons-count) * (var(--icons-count) - 11) * -1
    );
  }
  .icon:nth-child(12) {
    animation-delay: calc(
      var(--duration) / var(--icons-count) * (var(--icons-count) - 12) * -1
    );
  }
  .icon:nth-child(13) {
    animation-delay: calc(
      var(--duration) / var(--icons-count) * (var(--icons-count) - 13) * -1
    );
  }
</style>
