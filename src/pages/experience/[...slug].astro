---
import Item from "@/components/Item.astro"
import { projects } from "@/data/projects"
import Layout from "@/layouts/Layout.astro"
import NavLayout from "@/layouts/NavLayout.astro"
export const prerender = true
export const getStaticPaths = async () => {
  console.log(projects)
  return projects.map((pj) => ({
    params: { slug: pj.slug },
    props: { ...pj },
  }))
}

const params = Astro.params

const {
  title,
  image: imageURL,
  description,
  technologies,
  category,
  repo,
  url,
} = Astro.props
---

<Layout>
  <NavLayout transition="none" padding={false} backButtonURL="/experience">
    <div class="">
      <img class="w-full" src={imageURL} alt="" />
    </div>
    <div class="px-4 py-6">
      <hgroup class="-space-y-[5px]">
        <h1 class="text-4xl font-bold">{title}</h1>
        <small class="opacity-50">Category: {category}</small>
      </hgroup>
      <p class="mt-3 text-pretty">{description}</p>
      
      <h2 class="mt-4 text-2xl font-bold">Tecnolog√≠as</h2>
      <ul class="mt-2 mb-3 flex flex-wrap gap-2 items-center">
        {
          technologies.map((Tech) => (
            <div class="w-10">
              <Tech />
            </div>
          ))
        }
      </ul>
      <section
        hidden={repo || url ? false : true}
        class="pt-4 flex border-t border-[#0b0e394a]"
      >
        <div class="w-fit cursor-pointer">
          {
            repo && (
              <Item>
                <a
                  href={repo}
                  class="bg-[#333] text-white px-4 py-2 block select-none"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  Ver repositorio
                </a>
              </Item>
            )
          }
        </div>
        <div class="w-fit cursor-pointer ml-auto">
          <Item>
            <a
              href={url}
              class="bg-[#333] text-white px-4 py-2 block select-none"
              target="_blank"
              rel="noopener noreferrer"
            >
              Visitar sitio
            </a>
          </Item>
        </div>
      </section>
    </div>
  </NavLayout>
</Layout>
